{% extends "EcommerceBundle::layout.html.twig" %}

{% block pagecontent %}
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                {% for product in products %}
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="thumbnail">
                            <img src="{{ asset('img/holder.png') }}" alt="DevAndClick" width="300" height="300">
                            <div class="caption">
                                <h4>{{ product.name }}</h4>
                                <p>{{ product.price|number_format(2, '.', ',') }} â‚¬</p>
                                <a class="btn btn-primary" href="{{ path('ecommerce_product_view', {'pid' : product.id} ) }}">Plus d'infos</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}